{{#> base title="Genesis" }}
{{#*inline "content-block"}}

<div class="container" style="margin-top: 1em;">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">
                Genesis Info for {{content.network_id}}
            </h4>
        </div>

        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                Genesis hash: <a class="preformatted" href="/block/{{content.block_hash}}">{{content.block_hash}}</a>
            </li>

            <li class="list-group-item">
                Staking contract: <a class="preformatted" href="/account/{{content.staking_contract}}">{{content.staking_contract}}</a>
            </li>
        </ul>

    </div>
</div>

{{/inline}}
{{/base}}